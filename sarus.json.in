{
    "securityChecks": true,
    "OCIBundleDir": "@CMAKE_INSTALL_PREFIX@/var/OCIBundleDir",
    "rootfsFolder": "rootfs",
    "prefixDir": "@CMAKE_INSTALL_PREFIX@",
    "tempDir": "/tmp",
    "localRepositoryBaseDir": "/home",
    "centralizedRepositoryDir": "/var/sarus/centralized_repository",
    "mksquashfsPath": "@MKSQUASHFS_PATH@",
    "initPath": "@INIT_PATH@",
    "runcPath": "@RUNC_PATH@",
    "ramFilesystemType": "tmpfs",
    "siteMounts": [
        {
            "type": "bind",
            "source": "/home",
            "destination": "/home",
            "flags": {}
        }
    ],
    "OCIHooks": {
        "prestart": [
            {
                "path": "@CMAKE_INSTALL_PREFIX@/bin/ssh_hook",
                "env": [
                    "SARUS_PREFIX_DIR=@CMAKE_INSTALL_PREFIX@",
                    "SARUS_OPENSSH_DIR=@CMAKE_INSTALL_PREFIX@/openssh"
                ],
                "args": [
                    "ssh_hook",
                    "start-sshd"
                ]
            }
        ]
    }
}
